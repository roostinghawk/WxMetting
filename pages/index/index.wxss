/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

form{
  width: 80%;
}


.section{
  width: 100%;
  margin-bottom: 60rpx;
}
.section_center{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.section:last-child{
  margin-bottom: 0;
}
.section-gap{
  box-sizing: border-box;
  padding: 0 30rpx;
}
.section-spacing{
  box-sizing: border-box;
  padding: 0 80rpx;
}
.section-title{
  font-size: 28rpx;
  color: #999999;
  margin-bottom: 10rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
}
.section-gap .section-title{
  padding-left: 0;
  padding-right: 0;
}